        <script>
        function ajouterProduit() {
        var nomProduit = document.getElementById("nom-produit").value;
       
    
        var produit = {
            nom: nomProduit,
           
        };
    
        // Afficher le nom du produit en dessous du formulaire
        var results = document.getElementById("results");
        results.textContent = "Nom du produit : " + nomProduit;
    
        // Réinitialiser les champs du formulaire
        document.getElementById("nom-produit").value = "";
       
    }
    
        </script>
        
